{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "jest.config.js"],
  "exclude": ["node_modules", "dist"]
}
